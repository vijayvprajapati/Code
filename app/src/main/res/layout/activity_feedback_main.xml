<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:paddingBottom="25dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="25dp"
    tools:context="com.example.codder.logibox.FeedbackMainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Feedback"
        android:textStyle="italic"
        android:textSize="30dp"
        android:id="@+id/textviewTitle"
        style="@style/textcolor"
        android:layout_weight="2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edittextYourName"
        android:layout_weight="1"
        android:hint=" Name"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectedit"
        android:textColorHint="@android:color/secondary_text_dark"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="20dp"
        android:id="@+id/edittextEmilId"
        android:background="@drawable/rectedit"
        android:layout_weight="1"
        android:hint=" Email Id"
        android:textColorHint="@android:color/secondary_text_dark"

        android:inputType="textEmailAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:id="@+id/edittextDescription"
        android:layout_weight="4"
        android:hint=" Write Your FeedBack"
        android:textColorHint="@android:color/secondary_text_dark"
        android:lines="5"
        android:background="@drawable/rectedit"
        android:inputType="textMultiLine"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Send Feedback"
        android:textSize="15dp"/>
</LinearLayout>
